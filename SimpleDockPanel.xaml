<UserControl
    x:Class="WPF_containers.ucSimpleDockPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_containers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel LastChildFill="True">
        <Button Content="Button Boven" DockPanel.Dock="Top" />
        <Button Content="Button Links" DockPanel.Dock="Left" />
        <Button Content="Button Rechts" DockPanel.Dock="Right" />
        <Button Content="Button Onder" DockPanel.Dock="Bottom" />
        <Button Content="Button Centrum" />
    </DockPanel>
</UserControl>
