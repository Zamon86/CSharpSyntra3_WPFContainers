<UserControl
    x:Class="WPF_containers.ucStackpanelBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_containers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Padding="10"
        Background="Beige"
        BorderBrush="Tan"
        BorderThickness="2,2,7,7"
        CornerRadius="0,10,10,10">
        <StackPanel>
            <Button Margin="10" Content="Button Een" />
            <Button Margin="10" Content="Button Twee" />
            <Button Margin="10" Content="Button Drie" />
        </StackPanel>
    </Border>
</UserControl>
